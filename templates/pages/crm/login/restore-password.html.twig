{% extends "partials/landing.html.twig" %}

{% block title %}{% trans %}Restore Password{% endtrans %}{% endblock %}
{% block content %}
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">{% trans %}Restore Password{% endtrans %}</div>
        <div class="card-body">
            {% for message in app.flashes('message') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error._csrf_token') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="form-with-password">
                <div class="form-group">
                    <div class="form-label-group">
                        <div class="form-group col-md-12">
                            <label for="password">{% trans %}Password{% endtrans %}</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="{% trans %}Password{% endtrans %}" minlength="4" maxlength="50" autocomplete="new-password" required >
                        </div>

                        {% for message in app.flashes('error.password') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="form-group col-md-12">
                            <label for="confirm_password">{% trans %}Confirm password{% endtrans %}</label>
                            <input type="password" id="confirm_password" class="form-control" placeholder="{% trans %}Confirm password{% endtrans %}" minlength="4" maxlength="50" required>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('restore-password') }}" />
                <button class="btn btn-primary btn-block" type="submit">
                    {% trans %}Restore{% endtrans %}
                </button>
            </form>
            <div class="text-center">
                <a class="d-block small" href="{{ path('crm_login') }}">{% trans %}Login{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}