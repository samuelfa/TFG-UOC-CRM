{% extends "partials/crm.html.twig" %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block breadcrumb_parent_url %}{{ url('crm_dashboard') }}{% endblock %}
{% block breadcrumb_parent_name %}{% trans %}Dashboard{% endtrans %}{% endblock %}
{% block breadcrumb_section_name %}Overview{% endblock %}

{% block content %}
    <!-- Icon Cards-->
    <div class="row">
        <div class="col-xl-4 col-sm-12 mb-4">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-sticky-note"></i>
                    </div>
                    <div class="mr-5">{% trans with {'%total%': stats.notes} from 'app' %}%total% notes{% endtrans %}</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url('crm_familiar_list') }}">
                    <span class="float-left">{% trans %}View details{% endtrans %}</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
        <div class="col-xl-4 col-sm-12 mb-4">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-envelope"></i>
                    </div>
                    <div class="mr-5">{% trans with {'%total%': stats.emails} from 'app' %}%total% emails{% endtrans %}</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url('crm_familiar_list') }}">
                    <span class="float-left">{% trans %}View details{% endtrans %}</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
        <div class="col-xl-4 col-sm-12 mb-4">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-hiking"></i>
                    </div>
                    <div class="mr-5">{% trans with {'%total%': stats.linkActivities} from 'app' %}%total% linked activities{% endtrans %}</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url('crm_familiar_list') }}">
                    <span class="float-left">{% trans %}View details{% endtrans %}</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}