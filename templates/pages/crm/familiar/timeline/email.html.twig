{# @var item \App\Domain\Familiar\Action\Email #}
<li>
    <div class="timeline-badge email"><i class="fas fa-envelope"></i></div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <h4 class="timeline-title">{{ item.subject }}</h4>
            <p>
                <small class="text-muted">
                    <i class="fas fa-clock"></i> {% trans with {'%date%': item.createdAt|date('d/m/Y H:i')} from 'app' %}Created at %date%{% endtrans %}
                </small>
            </p>
            <p>
                <small class="text-muted">
                    {% for recipient in item.recipients %}
                        <i class="fas fa-user"></i> {{ recipient }} <br />
                    {% endfor %}
                </small>
            </p>
        </div>
        <div class="timeline-body">
            <p>{{ item.body }}</p>
        </div>
    </div>
</li>