{# @var item \App\Domain\Familiar\Action\Note #}
<li>
    <div class="timeline-badge note"><i class="fas fa-sticky-note"></i></div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <p>
                <small class="text-muted">
                    <i class="fas fa-clock"></i> {% trans with {'%date%': item.createdAt|date('d/m/Y H:i')} from 'app' %}Created at %date%{% endtrans %}
                </small>
            </p>
        </div>
        <div class="timeline-body">
            <p>{{ item.message }}</p>
        </div>
    </div>
</li>